@model IEnumerable<GeneralStore.MVC.Models.Product>
@{
    ViewBag.Title = "Products";
}

<h2>Index</h2>

<p>
    Our General Store, located in the rural Indiana, is host to a multitude of fine food and items of distinction.</br>
    Come browse our product and see what we have for you.
</p>

<p>
@Html.ActionLink("Create", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFood)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("More Info", "Details", new { id = item.Name }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.InventoryCount }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.UnitPrice }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.IsFood }) |
            </td>
        </tr>
    }
</table>